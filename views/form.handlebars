<h1>Workout Table</h1>


<table class="myTable">
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>LBs</th>
		<th>Action1</th>
		<th>Action2</th>
	</tr>
	
	<tr>
		<form action="/addrow" method="get">
			<td ><input type="text" name="name" required></td>
			<td ><input type="number" name="reps"></td>
			<td ><input type="number" name="weight"></td>
			<td ><input type="date" name="date"></td>
			<td >
				<input type="hidden" name="lbs" value=0>
				<input type="checkbox" name="lbs" value=1 checked>
			</td>
			<td><input type="submit" value="Add Row"/></td>
		</form>
	</tr>
	
	
	
	
	{{#each dArray}}
		<tr>
		
			
				
				
		
				<td class="myTable">{{this.name}}</td>
				<td class="myTable">{{this.reps}}</td>
				<td class="myTable">{{this.weight}}</td>
				<td class="myTable">{{this.date}}</td>
				<td class="myTable">{{this.lbs}}</td>
				
				<form action="/delete" method="get">
					<input type="hidden" name="id" value={{this.id}}>
					<td><input type="submit" value="Delete"/></td>
				</form>
		</tr>
	{{/each}}

	
	
</table>

