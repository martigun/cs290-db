<h1>Update this Record</h1>

<table class="myTable">

	<!-- Header Row -->
	<tr>
		<th>Version</th>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>LBs</th>
		<th>Action</th>
	</tr>
	
	<!-- Update Record -->
	<tr>
		<form action="/update" method="get">
			<td class="myTable">Updated</td>
			<td><input type="text" name="name" required value={{rowToEdit.name}}></td>
			<td><input type="number" name="reps" value={{rowToEdit.reps}}></td>
			<td><input type="number" name="weight" value={{rowToEdit.weight}}></td>
			<td><input type="date" name="date" value={{rowToEdit.date}}></td>
			<td><input type="number" name="lbs" min="0" max="1" value={{rowToEdit.lbs}}></td>
			<td>
				<input type="hidden" name="id" value={{rowToEdit.id}}>
				<input type="submit" value="Update"/>
			</td>
		</form>
	</tr>
	
	<!-- Original Record -->
	<tr>
		<td class="myTable">Original</td>
		<td class="myTable">{{rowToEdit.name}}</td>
		<td class="myTable">{{rowToEdit.reps}}</td>
		<td class="myTable">{{rowToEdit.weight}}</td>
		<td class="myTable">{{rowToEdit.date}}</td>
		<td class="myTable">{{rowToEdit.lbs}}</td>
	</tr>


</table>

